{
  "$ref": "#/definitions/OrgData",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "OrgData": {
      "additionalProperties": false,
      "properties": {
        "fylkeskommune": {
          "additionalProperties": false,
          "properties": {
            "logoSrc": {
              "type": "string"
            },
            "logoSrcDark": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": ["name", "logoSrc", "logoSrcDark"],
          "type": "object"
        },
        "featureConfig": {
          "type": "object",
          "properties": {
            "replaceTitleWithLogoInHeader": {
              "type": "boolean"
            },
            "forceTheme": {
              "type": "string",
              "enum": ["light", "dark"]
            },
            "enableShowTripPatternPrice": {
              "type": "boolean"
            }
          },
          "required": ["enableShowTripPatternPrice"]
        },
        "orgId": {
          "enum": ["atb", "fram", "nfk", "troms", "vkt", "farte"],
          "type": "string"
        },
        "authorityId": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        },
        "supportEmail": {
          "type": "string"
        },
        "urls": {
          "additionalProperties": false,
          "properties": {
            "accessibilityStatementUrl": {
              "$ref": "#/definitions/TranslatableUrl"
            },
            "facebookLink": {
              "type": "string"
            },
            "instagramLink": {
              "type": "string"
            },
            "privacyDeclarationUrl": {
              "$ref": "#/definitions/TranslatableUrl"
            },
            "supportUrl": {
              "$ref": "#/definitions/TranslatableUrl"
            },
            "helpUrl": {
              "$ref": "#/definitions/TranslatableUrl"
            },
            "twitterLink": {
              "type": "string"
            },
            "homePageUrl": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "href": {
                  "type": "string"
                }
              }
            },
            "ticketsUrl": {
              "$ref": "#/definitions/TranslatableUrl"
            },
            "sitemapUrls": {
              "dev": {
                "name": {
                  "type": "string"
                }
              },
              "staging": {
                "name": {
                  "type": "string"
                }
              },
              "prod": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "required": [
            "privacyDeclarationUrl",
            "accessibilityStatementUrl",
            "supportUrl"
          ],
          "type": "object"
        },
        "journeyApiConfigurations": {
          "additionalProperties": false,
          "properties": {
            "waitReluctance": {
              "type": "number"
            },
            "walkingReluctance": {
              "type": "number"
            },
            "transferPenalty": {
              "type": "number"
            },
            "defaultTransferSlack": {
              "type": "number"
            }
          },
          "type": "object"
        }
      },
      "required": ["featureConfig", "orgId", "supportEmail", "urls"],
      "type": "object"
    },
    "TranslatableUrl": {
      "additionalProperties": false,
      "properties": {
        "default": {
          "type": "string"
        },
        "en-US": {
          "type": "string"
        },
        "no": {
          "type": "string"
        },
        "nn": {
          "type": "string"
        }
      },
      "required": ["default"],
      "type": "object"
    }
  }
}
